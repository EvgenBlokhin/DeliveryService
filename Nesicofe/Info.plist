<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>

    <!-- Basic bundle info -->
    <key>CFBundleName</key>
    <string>CoffeeDelivery</string>

    <key>CFBundleDisplayName</key>
    <string>CoffeeDelivery</string>

    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>

    <key>CFBundleShortVersionString</key>
    <string>1.0</string>

    <key>CFBundleVersion</key>
    <string>1</string>

    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>

    <key>CFBundlePackageType</key>
    <string>APPL</string>

    <!-- Minimum iOS -->
    <key>MinimumOSVersion</key>
    <string>15.0</string>

    <!-- Launch screen (use storyboard named "LaunchScreen") -->
    <key>UILaunchStoryboardName</key>
    <string>LaunchScreen</string>

    <!-- Scene manifest — обязательно для iOS 13+ с SceneDelegate -->
    <key>UIApplicationSceneManifest</key>
    <dict>
        <key>UISceneConfigurations</key>
        <dict>
            <key>UIWindowSceneSessionRoleApplication</key>
            <array>
                <dict>
                    <key>UISceneConfigurationName</key>
                    <string>Default Configuration</string>
                    <!-- Укажи свое имя класса SceneDelegate; обычно: $(PRODUCT_MODULE_NAME).SceneDelegate -->
                    <key>UISceneDelegateClassName</key>
                    <string>$(PRODUCT_MODULE_NAME).SceneDelegate</string>
                </dict>
            </array>
        </dict>
    </dict>

    <!-- Supported interface orientations -->
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
    <key>UISupportedInterfaceOrientations~ipad</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>

    <!-- Status bar config -->
    <key>UIViewControllerBasedStatusBarAppearance</key>
    <true/>

    <!-- Permissions -->
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>Приложению нужен доступ к вашей геолокации для поиска ближайших автоматов.</string>

    <!-- Optional: camera usage if needed -->
    <key>NSCameraUsageDescription</key>
    <string>Камера используется для сканирования QR-кодов и фотографий.</string>

    <!-- Device families -->
    <key>UIDeviceFamily</key>
    <array>
        <integer>1</integer> <!-- iPhone -->
        <integer>2</integer> <!-- iPad -->
    </array>

    <!-- Background modes (optional) -->
    <key>UIBackgroundModes</key>

    <array>
        <string>fetch</string>
        <string>remote-notification</string>
    </array>

</dict>
</plist>
